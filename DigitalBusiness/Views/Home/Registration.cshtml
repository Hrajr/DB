@model UserViewModel
@{
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>

<div class="row" style="margin:auto; width:50%; padding:10px;">
    <div class="col-lg-12" style="margin:auto; width:50%; padding:10px;">
        <form class="login-form" asp-action="RegistrationForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span asp-validation-for="Username" class="text-danger"></span>
                <input class="form-control" type="text" name="Username" asp-for="Username" value="Username" style="margin-bottom:10px;" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Password" class="text-danger"></span>
                <input class="form-control" type="password" name="Password" asp-for="Password" value="Password" style="margin-bottom:20px;" /> 
            </div>
            <div class="form-group">
            <input class="form-control" type="text" name="Firstname" asp-for="Firstname" value="Firstname" style="margin-bottom:20px;" /> 
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Lastname" asp-for="Lastname" value="Lastname" style="margin-bottom:20px;" /> 
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Address" asp-for="Address" value="Address" style="margin-bottom:20px;" /> 
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Zipcode" asp-for="Zipcode" value="Zipcode" style="margin-bottom:20px;" /> 
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Place" asp-for="Place" value="Place" style="margin-bottom:20px;" /> 
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Phone" asp-for="Phone" value="Phone" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <span asp-validation-for="Email" class="text-danger"></span>
                <input class="form-control" type="email" name="Email" asp-for="Email" value="Email" style="margin-bottom:20px;" />
            </div>
                    <button type="submit" onclick="ready()" class="btn-dark" style="margin-bottom:10px;">Create Account</button>
        </form>
    </div>
</div>

