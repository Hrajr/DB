@model ReferenceViewModel
@{
    ViewData["Title"] = "OpenReference";
}

<h1>Edit reference @Model.SingleReference.ID</h1>

<div class="row" style="margin:auto; width:50%; padding:10px;">
    <div class="col-lg-12" style="margin:auto; width:50%; padding:10px;">
        <form class="login-form" asp-action="SubmitReference">
            <div class="form-group">
                <input class="form-control" type="text" name="CompanyName" asp-for="SingleReference.CompanyName" value="@Model.SingleReference.CompanyName" style="margin-bottom:10px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="ContactName" asp-for="SingleReference.ContactName" value="@Model.SingleReference.ContactName" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Address" asp-for="SingleReference.Address" value="@Model.SingleReference.Address" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Zipcode" asp-for="SingleReference.Zipcode" value="@Model.SingleReference.Zipcode" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Place" asp-for="SingleReference.Place" value="@Model.SingleReference.Place" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Country" asp-for="SingleReference.Country" value="@Model.SingleReference.Country" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="PhoneNumber" asp-for="SingleReference.PhoneNumber" value="@Model.SingleReference.PhoneNumber" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Email" asp-for="SingleReference.Email" value="@Model.SingleReference.Email" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Bank" asp-for="SingleReference.Bank" value="@Model.SingleReference.Bank" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="BIC" asp-for="SingleReference.BIC" value="@Model.SingleReference.BIC" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="IBAN" asp-for="SingleReference.IBAN" value="@Model.SingleReference.IBAN" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="KvK" asp-for="SingleReference.KvK" value="@Model.SingleReference.KvK" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="VAT" asp-for="SingleReference.VAT" value="@Model.SingleReference.VAT" style="margin-bottom:20px;" />
            </div>
            <div class="form-group">
                <p>Doubtfullness</p>
                <select class="browser-default" name="Doubtfull" asp-for="SingleReference.Doubtfull">
                    <option value="true">Doubtfull</option>
                    <option value="false">Trustfull</option>
                </select>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="Note" asp-for="SingleReference.Note" value="@Model.SingleReference.Note" style="margin-bottom:20px;" />
            </div>
            <button type="submit" onclick="ready()" class="btn-dark" style="margin-bottom:10px;">Add reference</button>
        </form>
    </div>
</div>

